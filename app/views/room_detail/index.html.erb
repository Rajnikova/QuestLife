<div id="wrapper">
  <div id="sidebar-wrapper">
    <aside id="sidebar">
      <ul id="sidemenu" class="sidebar-nav">
        <li>
          <a href="/<%=locale%>/home">
            <span class="sidebar-icon"><i class="fa fa-home"></i></span>
            <span class="sidebar-title"><%=t :home, scope: :menu %></span>
          </a>
        </li>
        <%if current_user %>
          <li>
            <a href="/<%=locale%>/new_quests">
              <span class="sidebar-icon new-quest"><i class="fa fa-exclamation-circle"></i></span>
              <%if @has_new_quest > 0 %>
                <span class="sidebar-title new-quest"><%=t :new_quests, scope: :menu %></span>
              <%else %>
                <span class="sidebar-title"><%=t :new_quests, scope: :menu %></span>
              <%end %>

            </a>
          </li>
          <li>
            <a href="/<%=locale%>/quests">
              <span class="sidebar-icon"><i class="fa fa-question-circle"></i></span>
              <span class="sidebar-title"><%=t :my_quests, scope: :menu %></span>
            </a>
          </li>
          <li>
            <a href="/<%=locale%>/created_quests">
              <span class="sidebar-icon"><i class="fa fa-database"></i></span>
              <span class="sidebar-title"><%=t :created_quests, scope: :menu %></span>
            </a>
          </li>
          <li>
            <a href="/<%=locale%>/create_quest">
              <span class="sidebar-icon"><i class="fa fa-certificate"></i></span>
              <span class="sidebar-title"><%=t :create_quest, scope: :menu %></span>
            </a>
          </li>
        <%end%>
        <li>
          <a href="/<%=locale%>/allquests">
            <span class="sidebar-icon"><i class="fa fa-clone"></i></span>
            <span class="sidebar-title"><%=t :all_quests, scope: :menu %></span>
          </a>
        </li>
        <li>
          <a href="/<%=locale%>/rooms">
            <span class="sidebar-icon"><i class="fa fa-user"></i></span>
            <span class="sidebar-title"><%=t :rooms, scope: :menu %></span>
          </a>
        </li>
        <li>
          <a href="/<%=locale%>/about">
            <span class="sidebar-icon"><i class="fa fa-info-circle"></i></span>
            <span class="sidebar-title"><%=t :about, scope: :menu %></span>
          </a>
        </li>
      </ul>
    </aside>
  </div>
  <main id="page-content-wrapper" role="main">
    <!-- stred -->
    <div class="container">
      <div class="row">
        <div class="well" align="center">
          <h1><%=@room.name %></h1>
          <p><%=@room.description %></p>
          <% flash.each do |key, value| %>

            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
          <%if current_user %>
            <%unless @joined %>
              |<%= link_to (t :join, scope: :room_detail), room_detail_path(room_id: @room.id), method: 'POST' %>|
            <%else %>
              <%if @room.last_admin? current_user %>
              |<%=link_to (t :delete, scope: :room_detail), room_detail_path(room_id: @room.id), method: 'DELETE' %>|
                <%end %>
              |<%= link_to (t :leave, scope: :room_detail), room_detail_path(room_id: @room.id), method: 'PATCH' %>
              |	&nbsp;	&nbsp;|
              <%= link_to (t :members, scope: :room_detail), users_path(rooms_id: @room.id), method: 'GET' %>|
            <%end %>

          <%end%>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="well">
          <h1 class="text-center"><%=t :quests_title, scope: :room_detail %></h1>
          <%if @joined %>
          <% @room_quests.each  do |quest|    %>
            <div class="list-group">
              <a href="/<%=locale%>/quest_detail?quest_id=<%=quest.id %>" class="list-group-item active">

                <div class="col-sm-10">
                  <p class="list-group-item-heading"> <%= quest.task %> </p>
                </div>

                <div class="col-sm-1">
                  <p class="list-group-item-heading"> <%=t :reward, scope: :models %>: </p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"> <%= quest.reward %> </p>
                </div>

              </a>
              <div class="col-sm-1 ruby-button">
                <%= link_to (t :add, scope: :room_detail), allquests_path(quest_id: quest.id), method: 'POST' %>
              </div>
              <br>
            </div>
          <% end %>
          <%=will_paginate @room_quests %>
          <%else %>
          <h3><%=t :no_quest, scope: :room_detail %></h3>
          <%end %>
        </div>
      </div>
    </div>
  </main>
</div>
</body>