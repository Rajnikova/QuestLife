
<h1>Hello, Rails!</h1>
<ol>
 <% @users.each_with_index  do |user|  %>
<li>
    <strong>
  <%= user.name %>
      created <%= time_ago_in_words user.created_at %> ago
      <%= link_to user.name, user %>
</strong>
</li>
<% end %>
