<%= link_to 'my quests', 'quests' %>

<%= form_with scope: :quest, local: true do |form| %>

  <p>
    <%= form.label :Quest %><br>
    <%= form.text_area :task %>
  </p>
  <p>
  <%= form.label :reward %><br>
  <%= form.number_field :reward %>
  </p>
  <%= form.label :description %><br>
  <%= form.text_area :description %>
  <p>
    <%= form.button %>
  </p>
<% end %>
