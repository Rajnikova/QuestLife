  <main id="page-content-wrapper" role="main">
    <!-- stred -->
    <div class="container">
      <div class="row">
        <div class="well">
          <h1 class="text-center">All quests</h1>
          <% flash.each do |key, value| %>

            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
          <% @quests.each  do |quest|    %>
            <div class="list-group">
              <a href="#" class="list-group-item active">


                <div class="col-sm-10">
                  <p class="list-group-item-heading"> <%= quest.task %> </p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"> reward: </p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"> <%= quest.reward %> </p>
                </div>
                <div class="col-sm-6">
                  <p class="list-group-item-heading"> </p>
                </div>
                <div class="col-sm-2">
                  <p class="list-group-item-heading"> Accepted times:</p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"> <%= quest.users_quests.where(status: 1).count %> </p>
                </div>
                <div class="col-sm-2">
                  <p class="list-group-item-heading">Completed times:</p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"> <%= quest.users_quests.where(status: 2).count %> </p>
                </div>
                <%= link_to 'Detail', quest_detail_path(quest_id: quest.id), method: 'GET' %>
                <%if current_user %>
                <%= link_to 'Add', allquests_path(quest_id: quest.id), method: 'POST' %>
                &nbsp;&nbsp;
                <%= link_to 'Add to room', admin_rooms_path(quest_id: quest.id), method: 'GET' %>
                  <%end%>

              </a>
            </div>
          <% end %>
          <%=will_paginate @quests %>

        </div>
      </div>
    </div>
  </main>
</div>
</body>
