  <main id="page-content-wrapper" role="main">
    <!-- stred -->
    <div class="container">
      <div class="row">
        <div class="well">
          <h1 class="text-center"><%=t :title, scope: :rooms %></h1>
          <%if current_user %>
          <a href="/create_room" class="btn btn-primary js-scroll-trigger">New room</a>
            <br><br>

            <%end %>
          <% @rooms.each  do |room|    %>
            <div class="list-group">
              <a href="/room_detail?room_id=<%=room.id%>" class="list-group-item active">


                <div class="col-sm-10">
                  <p class="list-group-item-heading"> <%= room.name %> </p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"><%=t :users, scope: :rooms %>:</p>
                </div>
                <div class="col-sm-1">
                  <p class="list-group-item-heading"> <%=room.users.count %> </p>
                </div>




              </a>
            </div>
          <% end %>
          <%=will_paginate @rooms %>

        </div>
      </div>
    </div>
  </main>
