</div>
<div id="wrapper">
  <div id="sidebar-wrapper">
    <aside id="sidebar">
      <ul id="sidemenu" class="sidebar-nav">
        <li>
          <a href="/<%=locale%>/home">
            <span class="sidebar-icon"><i class="fa fa-home"></i></span>
            <span class="sidebar-title"><%=t :home, scope: :menu %></span>
          </a>
        </li>
        <%if current_user %>
          <li>
            <a href="/<%=locale%>/new_quests">
              <span class="sidebar-icon new-quest"><i class="fa fa-exclamation-circle"></i></span>
              <%if @has_new_quest > 0 %>
                <span class="sidebar-title new-quest"><%=t :new_quests, scope: :menu %></span>
              <%else %>
                <span class="sidebar-title"><%=t :new_quests, scope: :menu %></span>
              <%end %>

            </a>
          </li>
          <li>
            <a href="/<%=locale%>/quests">
              <span class="sidebar-icon"><i class="fa fa-question-circle"></i></span>
              <span class="sidebar-title"><%=t :my_quests, scope: :menu %></span>
            </a>
          </li>
          <li>
            <a href="/<%=locale%>/created_quests">
              <span class="sidebar-icon"><i class="fa fa-database"></i></span>
              <span class="sidebar-title"><%=t :created_quests, scope: :menu %></span>
            </a>
          </li>
          <li>
            <a href="/<%=locale%>/create_quest">
              <span class="sidebar-icon"><i class="fa fa-certificate"></i></span>
              <span class="sidebar-title"><%=t :create_quest, scope: :menu %></span>
            </a>
          </li>
        <%end%>
        <li>
          <a href="/<%=locale%>/allquests">
            <span class="sidebar-icon"><i class="fa fa-clone"></i></span>
            <span class="sidebar-title"><%=t :all_quests, scope: :menu %></span>
          </a>
        </li>
        <li>
          <a href="/<%=locale%>/rooms">
            <span class="sidebar-icon"><i class="fa fa-user"></i></span>
            <span class="sidebar-title"><%=t :rooms, scope: :menu %></span>
          </a>
        </li>
        <li>
          <a href="/<%=locale%>/about">
            <span class="sidebar-icon"><i class="fa fa-info-circle"></i></span>
            <span class="sidebar-title"><%=t :about, scope: :menu %></span>
          </a>
        </li>
      </ul>
    </aside>
  </div>
  <main>
    <div class="container">
      <div class="row">
        <div class="well">
          <div class="headline">
            <h1><%=t :title, scope: :about %></h1>
          </div>
          <div class="row">
            <div class="list-group">
              <div class="about">
                <p>
                 <%=t :description, scope: :about %>
                </p>
                <h2><%=t :question, scope: [:about, :quest] %></h2>
                <p>
                  <%=t :p1, scope: [:about, :quest] %>
                </p>
                <h2><%=t :question, scope: [:about, :room] %></h2>
                <p>
                  <%=t :p1, scope: [:about, :room] %>
                </p>
                <h2><%=t :question, scope: [:about, :sending] %></h2>
                <p>
                  <%=t :p1, scope: [:about, :sending] %>
                  <br>
                </p>
                <p>
                  <strong><%=t :fill1, scope: [:about, :sending] %>:</strong> <%=t :des1, scope: [:about, :sending] %><br>
                  <strong><%=t :fill2, scope: [:about, :sending] %>:</strong>  <%=t :des2, scope: [:about, :sending] %><br>
                  <strong><%=t :fill3, scope: [:about, :sending] %>:</strong> <%=t :des3, scope: [:about, :sending] %><br>
                </p>
                <p>
                  <h3><%=t :choises, scope: [:about, :sending] %></h3>
                  <strong><%=t :c1, scope: [:about, :sending] %> :</strong> <%=t :c1_des, scope: [:about, :sending] %> <br>
                  <strong><%=t :c2, scope: [:about, :sending] %>:</strong> <%=t :c2_des, scope: [:about, :sending] %><br>
                  <strong><%=t :c3, scope: [:about, :sending] %>:</strong> <%=t :c3_des, scope: [:about, :sending] %><br>
                </p>
                <p>
                  <%=t :p2, scope: [:about, :sending] %>
                </p>
                <h2><%=t :question, scope: [:about, :accept] %></h2>
                <p>
                  <%=t :p1, scope: [:about, :accept] %>

                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
</body>